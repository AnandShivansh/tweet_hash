extends layout

block content
	main
		// --Search Form--
		.row
			#custom-search-input
				.input-group.col-md-12
					input.search-query.form-control(type='text', placeholder='Search for hashtags')
					span.input-group-btn
						button.btn.btn-danger(type='button')
							span.glyphicon.glyphicon-search
		// --Login Form--
		.row
			form.form-signin.mg-btm
				h3.heading-desc Please login to TweetCount
				.social-box
					.row
						.col-md-12
							a.btn.btn-info.btn-block(href='#')
								i.icon-twitter 
								| Login with Twitter
				.main
					input.form-control(type='text', placeholder='Email', autofocus='')
					input.form-control(type='password', placeholder='Password')
					span.clearfix
				.login-footer
					.row
						.col-xs-6.col-md-6
							.left-section
								a(href='') Sign up now
						.col-xs-6.col-md-6.pull-right
							button.btn.btn-large.btn-primary.pull-right(type='submit') Login