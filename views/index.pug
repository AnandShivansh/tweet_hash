extends layout

block content
	main
		// --Login Form--
		.row
			form.form-signin.mg-btm(action='/login', method='post')
				h3.heading-desc Please login to TweetCount
				.social-box
					.row
						.col-md-12
							a.btn.btn-info.btn-block(href='https://tweet-counter.herokuapp.com/auth/twitter')
								i.icon-twitter
								| Login with Twitter
				.main
					input.form-control(type='text', name='email', placeholder='Email', autofocus='')
					input.form-control(type='password', name='password', placeholder='Password')
					span.clearfix
				.login-footer
					.row
						.col-xs-6.col-md-6.pull-right
							button.btn.btn-large.btn-primary.pull-right(type='submit') Login
